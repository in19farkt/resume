.experience
  position relative
  margin-top 1.7%

  &:first-child
    margin-top 6.4%

  &__marker
    position absolute
    top 0
    left 0
    margin-left 1.85%
    margin-top 0.54rem
    max-width 5%
    width 1.35rem
    border-radius 50%
    background-color black

  &__marker:before
    content ""
    display block
    padding-top 100%

  &__title
    margin-left 8.3%

  &__content
    margin-top 1%

  &__company
  &__date
  &__specialty
    display inline-block
    font-size 1.75rem
    line-height 2.3rem
    margin-right 3%

  &__company
  &__specialty
    text-transform uppercase

  &__company
    font-family MyriadProBold
    color black