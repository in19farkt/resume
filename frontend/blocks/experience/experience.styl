.experience
  position relative
  margin-top 1.7%

  &:first-child
    margin-top 4%

  &__marker
    position absolute
    top 0
    left 0
    margin-left 1.85%
    margin-top 0.54rem
    max-width 5%
    width 1.35rem
    border-radius 50%
    background-color black

    &:before
      content ""
      display block
      padding-top 100%

  &__title
    margin-left 8.3%

  &__content
    margin-top 1%

  &__profession
  &__date
  &__organization
    display inline-block
    font-size 1.75rem
    line-height 2.3rem
    margin-right 3%
    overflow hidden
    text-overflow ellipsis
    max-width 100%

  &__profession
  &__organization
    text-transform uppercase

  &__profession
    font-family MyriadProBold
    color main_color

.layout__right-column
  .article:nth-child(2)
    .experience:first-child
      margin-top 6.3%

    .experience__profession
      color black