.software
  margin-top 1%
  text-align center
  margin-top 3.5%

  &__type
    text-transform uppercase
    font-size 1.8rem
  
  &__value-frame
    background-color disable_color
    margin-top 4.3%
  
  &__value
    height 2.5%
    background-color main_color

@media screen and (min-width 695px) and (max-width 919px)
  .software
    width 45%
    text-align left

    &:nth-child(2n+1)
      float left

    &:nth-child(2n)
      float right

    &:nth-child(-n+2)
      margin-top 1%

@media screen and (min-width 1220px)
  .software
    width 45%
    text-align left

    &:nth-child(2n+1)
      float left

    &:nth-child(2n)
      float right

    &:nth-child(-n+2)
      margin-top 1%