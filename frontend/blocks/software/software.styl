.software
  text-align center
  margin-top 3.5%
  display flex
  flex-direction column
  align-items stretch

  &__title
    text-transform uppercase
    font-size 1.8rem
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  
  &__value-frame
    background-color disable_color
    margin-top 4.3%
  
  &__value
    background-color main_color
    height 2.5%

@media screen and (min-width 695px) and (max-width 919px)
  .software
    width 45%
    text-align left

    &:nth-child(2n+1)
      float left

    &:nth-child(2n)
      float right

    &:nth-child(-n+2)
      margin-top 1%

@media screen and (min-width 1220px)
  .software
    width 45%
    text-align left

    &:nth-child(2n+1)
      float left

    &:nth-child(2n)
      float right

    &:nth-child(-n+2)
      margin-top 1%