.name
  text-align center
  min-width 150px
  padding 2.9% 5% 0 5%
  margin-bottom 14.2%

  &__photo-frame
    position relative
    border 1.5px solid main_color
    border-radius 50%
    max-width 255px
    margin 0 auto 8.4% auto
  
    &:before
      content ""
      display block
      padding-top 100%
  
  &__photo
    position absolute
    top 0
    left 0
    background-color main_color
    border-radius 50%
    width 87.4%
    margin 6.3%
  
    &:before
      content ""
      display block
      padding-top 100%

.name-info

  span
    display block
    text-transform uppercase

  &__name
    font-family MyriadProLightSemiExt
    font-size 3.65rem
    line-height 3.4rem

  &__surname
    font-family MyriadProBold
    font-size 4.22rem
    line-height 3.4rem

  &__profession
    font-family MyriadProBold
    font-size 1.65rem
    line-height 3.95rem